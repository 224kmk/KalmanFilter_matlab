function [pos vel] = DvKalman(z)
%
%
persistent A H Q R 
persistent x P
persistent firstRun


if isempty(firstRun)
  firstRun = 1;
  
  % 저장되는 시간
  dt = 0.1;
  
  % 행렬을 정의해서 위치 추정하기
  
  A = [ 1 dt;
        0 1  ];
  H = [1 0];
  
  Q = [ 1 0;
        0 3 ];
  R = 10;
    
  x = [ 0 20 ]';
  P = 5*eye(2);
end

% x는 위치
xp = A*x;  
Pp = A*P*A' + Q;    

K = Pp*H'*inv(H*Pp*H' + R);

x = xp + K*(z - H*xp);
P = Pp - K*H*Pp;   

  
pos = x(1);
vel = x(2);